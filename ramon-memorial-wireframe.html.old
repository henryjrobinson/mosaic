<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ramon Serrano - Digital Memorial</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Georgia', serif;
            background: #f5f5f0;
            color: #333;
            line-height: 1.6;
        }

        /* Header */
        .header {
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
            color: white;
            padding: 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .header::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><text x="50" y="50" text-anchor="middle" fill="white" opacity="0.1" font-size="8">📚</text></svg>') repeat;
            opacity: 0.1;
        }

        .header h1 {
            font-size: 3rem;
            margin-bottom: 0.5rem;
            position: relative;
            z-index: 1;
        }

        .header .subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            position: relative;
            z-index: 1;
        }

        .header .dates {
            font-size: 1rem;
            opacity: 0.8;
            margin-top: 0.5rem;
            position: relative;
            z-index: 1;
        }

        /* Navigation */
        .nav {
            background: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .nav ul {
            list-style: none;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            padding: 1rem;
        }

        .nav li {
            margin: 0 1.5rem;
        }

        .nav a {
            text-decoration: none;
            color: #2c3e50;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            transition: all 0.3s ease;
            display: inline-block;
        }

        .nav a:hover, .nav a.active {
            background: #3498db;
            color: white;
        }

        /* Main Container */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        /* Hero Section */
        .hero {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 3rem;
            margin-bottom: 4rem;
            align-items: center;
        }

        .hero-image {
            position: relative;
            overflow: hidden;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .hero-image-placeholder {
            width: 100%;
            height: 400px;
            background: linear-gradient(135deg, #e0e0e0 0%, #f0f0f0 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            color: #999;
        }

        .hero-content h2 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: #2c3e50;
        }

        .hero-content .quote {
            font-style: italic;
            font-size: 1.3rem;
            color: #555;
            margin-bottom: 2rem;
            padding-left: 2rem;
            border-left: 4px solid #3498db;
        }

        /* Talk with Ramon Section */
        .talk-section {
            background: white;
            border-radius: 20px;
            padding: 3rem;
            margin-bottom: 3rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        .talk-interface {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-top: 2rem;
        }

        .chat-demo {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 2rem;
            height: 400px;
            display: flex;
            flex-direction: column;
        }

        .chat-messages {
            flex: 1;
            overflow-y: auto;
            margin-bottom: 1rem;
        }

        .message {
            margin-bottom: 1rem;
            padding: 1rem;
            border-radius: 10px;
        }

        .message.user {
            background: #3498db;
            color: white;
            margin-left: 20%;
            text-align: right;
        }

        .message.ramon {
            background: #ecf0f1;
            margin-right: 20%;
        }

        .chat-input {
            display: flex;
            gap: 1rem;
        }

        .chat-input input {
            flex: 1;
            padding: 0.8rem;
            border: 2px solid #ddd;
            border-radius: 25px;
            font-size: 1rem;
        }

        .chat-input button {
            padding: 0.8rem 2rem;
            background: #3498db;
            color: white;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .chat-input button:hover {
            background: #2980b9;
        }

        .suggested-questions {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .suggested-questions h3 {
            margin-bottom: 1rem;
            color: #2c3e50;
        }

        .question-btn {
            text-align: left;
            padding: 1rem;
            background: #f8f9fa;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .question-btn:hover {
            border-color: #3498db;
            background: white;
            transform: translateX(5px);
        }

        /* Timeline Section */
        .timeline-section {
            margin-bottom: 4rem;
        }

        .timeline {
            position: relative;
            padding: 2rem 0;
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            width: 2px;
            height: 100%;
            background: #ddd;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 3rem;
            display: flex;
            align-items: center;
        }

        .timeline-item:nth-child(odd) {
            flex-direction: row-reverse;
        }

        .timeline-content {
            width: 45%;
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

        .timeline-content:hover {
            transform: scale(1.02);
        }

        .timeline-dot {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            width: 20px;
            height: 20px;
            background: #3498db;
            border-radius: 50%;
            border: 4px solid white;
            box-shadow: 0 0 0 3px #ddd;
        }

        .timeline-date {
            font-weight: bold;
            color: #3498db;
            margin-bottom: 0.5rem;
        }

        /* Memory Wall */
        .memory-wall {
            background: white;
            border-radius: 20px;
            padding: 3rem;
            margin-bottom: 3rem;
        }

        .memory-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .memory-card {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .memory-card:hover {
            border-color: #3498db;
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .memory-author {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

        .author-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #3498db;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-weight: bold;
        }

        .author-info h4 {
            font-size: 0.9rem;
            color: #2c3e50;
        }

        .author-info .relationship {
            font-size: 0.8rem;
            color: #7f8c8d;
        }

        .memory-content {
            color: #555;
            line-height: 1.6;
        }

        .add-memory-btn {
            background: #2ecc71;
            color: white;
            padding: 1rem 2rem;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            cursor: pointer;
            margin-top: 2rem;
            transition: background 0.3s ease;
        }

        .add-memory-btn:hover {
            background: #27ae60;
        }

        /* Ramon-isms Section */
        .ramonisms {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 20px;
            padding: 3rem;
            margin-bottom: 3rem;
        }

        .ramonism-cards {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .ramonism-card {
            background: white;
            padding: 1.5rem;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .ramonism-card:hover {
            transform: scale(1.05) rotate(2deg);
        }

        .ramonism-card .quote-mark {
            font-size: 2rem;
            color: #3498db;
            margin-bottom: 0.5rem;
        }

        .ramonism-card .text {
            font-style: italic;
            color: #555;
            margin-bottom: 1rem;
        }

        .ramonism-card .context {
            font-size: 0.8rem;
            color: #7f8c8d;
        }

        /* Contributors Section */
        .contributors {
            text-align: center;
            margin: 4rem 0;
        }

        .contributors h2 {
            margin-bottom: 2rem;
            color: #2c3e50;
        }

        .contributor-list {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 2rem;
        }

        .contributor {
            text-align: center;
        }

        .contributor-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: #ecf0f1;
            margin: 0 auto 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: #7f8c8d;
        }

        .contributor-name {
            font-weight: 500;
            color: #2c3e50;
        }

        .contributor-role {
            font-size: 0.9rem;
            color: #7f8c8d;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .hero {
                grid-template-columns: 1fr;
            }
            
            .talk-interface {
                grid-template-columns: 1fr;
            }
            
            .timeline-item,
            .timeline-item:nth-child(odd) {
                flex-direction: column;
            }
            
            .timeline-content {
                width: 90%;
            }
            
            .timeline::before {
                left: 20px;
            }
            
            .timeline-dot {
                left: 20px;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <h1>Dr. Ramon Serrano</h1>
        <p class="subtitle">Beloved Husband, Father, Professor, Mentor</p>
        <p class="dates">1970 - 2024</p>
    </header>

    <!-- Navigation -->
    <nav class="nav">
        <ul>
            <li><a href="#home" class="active">Home</a></li>
            <li><a href="#talk">Talk with Ramon</a></li>
            <li><a href="#timeline">Life Journey</a></li>
            <li><a href="#memories">Memory Wall</a></li>
            <li><a href="#ramonisms">Ramon-isms</a></li>
            <li><a href="#contributors">Contributors</a></li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <!-- Hero Section -->
        <section class="hero" id="home">
            <div class="hero-image">
                <div class="hero-image-placeholder">
                    👨‍🏫
                </div>
            </div>
            <div class="hero-content">
                <h2>Celebrating a Life of Learning and Love</h2>
                <p class="quote">"Well, let's think about it this way... Knowledge and memories should be shared, not hoarded."</p>
                <p>Welcome to Ramon's digital memorial, created with love by his family, friends, colleagues, and students. Explore his journey, hear his voice, and add your own memories to keep his spirit alive.</p>
            </div>
        </section>

        <!-- Talk with Ramon Section -->
        <section class="talk-section" id="talk">
            <h2>Talk with Ramon</h2>
            <p>Using recordings from his lectures and videos, we've created a way to have a conversation with Ramon. Ask him about life, teaching, or just hear one of his famous dad jokes.</p>
            
            <div class="talk-interface">
                <div class="chat-demo">
                    <div class="chat-messages">
                        <div class="message user">
                            How do I know if I'm making the right career choice?
                        </div>
                        <div class="message ramon">
                            Well, let's think about it this way... A career is like a garden. You plant seeds not knowing exactly how they'll grow, but with patience and care, something beautiful emerges. The 'right' choice is the one where you can grow while helping others flourish too.
                        </div>
                    </div>
                    <div class="chat-input">
                        <input type="text" placeholder="Ask Ramon a question...">
                        <button>Send</button>
                    </div>
                </div>
                
                <div class="suggested-questions">
                    <h3>Popular Questions</h3>
                    <button class="question-btn">What advice would you give to a new teacher?</button>
                    <button class="question-btn">Tell me about your favorite family tradition</button>
                    <button class="question-btn">What's your best dad joke?</button>
                    <button class="question-btn">How did you meet your wife?</button>
                </div>
            </div>
        </section>

        <!-- Timeline Section -->
        <section class="timeline-section" id="timeline">
            <h2>Life Journey</h2>
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-content">
                        <div class="timeline-date">1995</div>
                        <h3>Met His Future Wife</h3>
                        <p>Two struggling PhD students found love over late-night study sessions and too much coffee.</p>
                    </div>
                    <div class="timeline-dot"></div>
                </div>
                
                <div class="timeline-item">
                    <div class="timeline-content">
                        <div class="timeline-date">2002 & 2005</div>
                        <h3>Became a Father</h3>
                        <p>Welcomed two beautiful children who would become his greatest teachers.</p>
                    </div>
                    <div class="timeline-dot"></div>
                </div>
                
                <div class="timeline-item">
                    <div class="timeline-content">
                        <div class="timeline-date">2010</div>
                        <h3>Earned Tenure</h3>
                        <p>Celebrated with colleagues who had become family, marking a milestone in his academic journey.</p>
                    </div>
                    <div class="timeline-dot"></div>
                </div>
                
                <div class="timeline-item">
                    <div class="timeline-content">
                        <div class="timeline-date">2018</div>
                        <h3>Teaching Excellence Award</h3>
                        <p>Students surprised him with a standing ovation that left him speechless (a rare occurrence!).</p>
                    </div>
                    <div class="timeline-dot"></div>
                </div>
            </div>
        </section>

        <!-- Memory Wall -->
        <section class="memory-wall" id="memories">
            <h2>Memory Wall</h2>
            <p>Stories and memories shared by those whose lives Ramon touched.</p>
            
            <div class="memory-grid">
                <div class="memory-card">
                    <div class="memory-author">
                        <div class="author-avatar">MC</div>
                        <div class="author-info">
                            <h4>Maria Chen</h4>
                            <span class="relationship">Department Chair</span>
                        </div>
                    </div>
                    <div class="memory-content">
                        "Ramon had this incredible ability to see potential in every student. He'd spend hours after class helping anyone who asked, always ending with 'You've got this!' His office was a sanctuary for struggling students."
                    </div>
                </div>
                
                <div class="memory-card">
                    <div class="memory-author">
                        <div class="author-avatar">JS</div>
                        <div class="author-info">
                            <h4>Jennifer Santos</h4>
                            <span class="relationship">Former Student</span>
                        </div>
                    </div>
                    <div class="memory-content">
                        "I almost dropped out my sophomore year. Ramon took me aside and said, 'The world needs what you have to offer.' Today I'm a professor because he believed in me when I couldn't believe in myself."
                    </div>
                </div>
                
                <div class="memory-card">
                    <div class="memory-author">
                        <div class="author-avatar">AS</div>
                        <div class="author-info">
                            <h4>Ana Serrano</h4>
                            <span class="relationship">Daughter</span>
                        </div>
                    </div>
                    <div class="memory-content">
                        "Dad turned everything into a teaching moment, but in the best way. Baking cookies became chemistry lessons, bedtime stories became life philosophy. He made learning feel like magic."
                    </div>
                </div>
            </div>
            
            <button class="add-memory-btn">+ Add Your Memory</button>
        </section>

        <!-- Ramon-isms Section -->
        <section class="ramonisms" id="ramonisms">
            <h2>Ramon-isms</h2>
            <p>His favorite sayings, jokes, and pieces of wisdom that we'll never forget.</p>
            
            <div class="ramonism-cards">
                <div class="ramonism-card">
                    <div class="quote-mark">"</div>
                    <div class="text">Well, let's think about it this way...</div>
                    <div class="context">How every explanation began</div>
                </div>
                
                <div class="ramonism-card">
                    <div class="quote-mark">"</div>
                    <div class="text">Why did the professor bring a ladder to class? To help his students reach higher levels of understanding!</div>
                    <div class="context">Classic Ramon dad joke</div>
                </div>
                
                <div class="ramonism-card">
                    <div class="quote-mark">"</div>
                    <div class="text">Teaching gives me purpose</div>
                    <div class="context">Said during his final months</div>
                </div>
                
                <div class="ramonism-card">
                    <div class="quote-mark">"</div>
                    <div class="text">There are no stupid questions, only missed opportunities to learn</div>
                    <div class="context">First day of every semester</div>
                </div>
            </div>
        </section>

        <!-- Contributors Section -->
        <section class="contributors" id="contributors">
            <h2>Created with Love By</h2>
            <div class="contributor-list">
                <div class="contributor">
                    <div class="contributor-avatar">👩</div>
                    <div class="contributor-name">His Wife</div>
                    <div class="contributor-role">Life Partner</div>
                </div>
                <div class="contributor">
                    <div class="contributor-avatar">👨</div>
                    <div class="contributor-name">Miguel</div>
                    <div class="contributor-role">Son</div>
                </div>
                <div class="contributor">
                    <div class="contributor-avatar">👩</div>
                    <div class="contributor-name">Ana</div>
                    <div class="contributor-role">Daughter</div>
                </div>
                <div class="contributor">
                    <div class="contributor-avatar">MS</div>
                    <div class="contributor-name">Maria S.</div>
                    <div class="contributor-role">Sister</div>
                </div>
                <div class="contributor">
                    <div class="contributor-avatar">DC</div>
                    <div class="contributor-name">Dr. Chen</div>
                    <div class="contributor-role">Colleague</div>
                </div>
                <div class="contributor">
                    <div class="contributor-avatar">CG</div>
                    <div class="contributor-name">Carlos G.</div>
                    <div class="contributor-role">Best Friend</div>
                </div>
            </div>
        </section>
    </div>

    <script>
        // Add smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        // Update active nav on scroll
        window.addEventListener('scroll', () => {
            const sections = document.querySelectorAll('section[id]');
            const navLinks = document.querySelectorAll('.nav a');
            
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                const sectionHeight = section.clientHeight;
                if (scrollY >= (sectionTop - 200)) {
                    current = section.getAttribute('id');
                }
            });

            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href').slice(1) === current) {
                    link.classList.add('active');
                }
            });
        });

        // Animate timeline items on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Apply initial styles and observe
        document.querySelectorAll('.timeline-item, .memory-card, .ramonism-card').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            el.style.transition = 'all 0.6s ease';
            observer.observe(el);
        });
    </script>
</body>
</html>